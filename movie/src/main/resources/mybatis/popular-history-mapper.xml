<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="popular-history">

	<insert id="savePopular">
		insert into popular_history(popular_history_no, 
		popular_history_keyword) 
		values(popular_history_seq.nextval, #{keyword})	
	</insert>
	
	<select id="showPopular" resultType="String">
		select popular_history_keyword from popular_history 
		group by popular_history_keyword
		order by count(popular_history_keyword) desc
		fetch first 5 rows only
	</select>


</mapper>    
    
    
    