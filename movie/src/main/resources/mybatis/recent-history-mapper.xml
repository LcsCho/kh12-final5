<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="recent">

	<insert id="saveRecent">
		insert into recent-history(recent_history_no, 
		recent_history_keyword,recent_history_id)  
		values(popular_history_seq.nextval, #{keyword}, #{memberId})	
	</insert>
	
	<select id="showRecent" resultType="String">
		select recent_history_keyword from recent_history 
		order by recent_history_time desc
		fetch first 5 rows only
		
	
	</select>

</mapper>    
    
    