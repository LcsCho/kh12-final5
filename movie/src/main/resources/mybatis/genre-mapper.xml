<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="genre">
	
	<!-- 시퀀스 -->
	<select id="sequence" resultType="int">
		select genre_seq.nextval from dual
	</select>
	
	<!-- 등록 -->
	<insert id="add">
		insert into genre(genre_no, genre_name) values(#{genreNo}, #{genreName})
	</insert>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete genre where genre_no = #{genreNo}
	</delete>
	
	<!-- 전체 조회 -->
	<select id="listAll" resultType="GenreDto">
		select * from genre order by genre_no asc
	</select>
	
	<!-- 상세 조회 : genreNo -->
	<select id="findByGenreNo" resultType="GenreDto">
		select * from genre where genre_no = #{genreNo}
	</select>
	
	<!-- 상세 조회 : genreName -->
	<select id="findByGenreName" resultType="GenreDto">
		select * from genre where genre_name = #{genreName}
	</select>
	
	<!-- 수정 -->
	<update id="edit">
		update genre set genre_name = #{genreName} where genre_no = #{genreNo}
	</update>
	
</mapper>